<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_three"
    android:layout_height="match_parent"
    tools:context=".devOnePopup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/devOneNameHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="@string/dev_two"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/productsansbold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/devTwoEnlarged"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="30dp"
                android:transitionName="devTitleTwo"
                app:civ_border_width="4dp"
                android:src="@drawable/shrish"
                android:layout_below="@id/devOneNameHolder"
                app:civ_border_color="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/devTwoGh"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_gh"
                android:layout_below="@+id/devTwoEnlarged"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:focusable="true" />
            <ImageView
                android:id="@+id/devTwoLinkedin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/devTwoGh"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_linkedin"
                android:focusable="true" />
            <ImageView
                android:id="@+id/devTwoWeb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/devTwoLinkedin"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_web"
                android:focusable="true" />
            <ImageView
                android:id="@+id/devTwoMail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/devTwoWeb"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_mailto"
                android:focusable="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>